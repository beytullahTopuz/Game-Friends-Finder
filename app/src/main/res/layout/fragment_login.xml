<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1A17"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.LoginFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#AAAAAA"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="25dp"/>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="8dp"
                app:startIconDrawable="@drawable/mail48">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginFragmentLMailTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mail"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#AAAAAA"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="8dp"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/password48">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginFragmentPasswordTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/loginFragmentGOTOregisterFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/i_dont_have_account"
                android:textColor="#F0A500"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/loginFragmentForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/forget_password"
                android:textColor="#F0A500"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:textSize="14sp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginFragmentLoginBTN"
                android:layout_width="250dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:cardBackgroundColor="#E45826">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="32sp"/>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>